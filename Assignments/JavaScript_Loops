	<body>
		<h2>Switch Case</h2>
		<script>// Switch Block
			age=21;
			switch (age){
			case 19:console.log("Eligible for driving");
					break;
			case 20:console.log("Eligible for smoking");
					break;
			case 21:console.log("Eligible for drinking");
					break;
			default:console.log("Not Eligible");
					break;
			}
		</script>
		<script>//While loop
			var a=0,b=0,c=0;
			console.log("Fibonacci");
			while (b<10)
			{
			console.log(c);
			c=a+b;
			a=b;
			b=c;
			}

		</script>
	</body>
